.row{"ng-app"=>"AngulaRails", "ng-controller"=>"PasswordController"}
  .span12
    %form{"ng-submit"=>"register()", method: "POST"}
      .control-group
        %label{for: "email"} Email
        .controls
          %input{id: "email", name: "email", type: "email", "ng-model"=>"email"}
      .control-group{"ng-class" => "{ error: passwordValidationMessage.length > 0 }"}
        %label{for: "password"} Password
        .controls
          %input{id: "password", name: "password", type: "password", "ng-model"=>"password", "ng-change"=>"validatePassword()"}
          %span.help-inline {{ passwordValidationMessage }}
      .control-group
        .controls
          %button.btn.btn-primary
            Register
